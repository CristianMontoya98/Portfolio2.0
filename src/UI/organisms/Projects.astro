---
import ProjectCard from '../molecules/Project-card.astro';
import laEconomiaImg from '../../assets/img/laEconomiaShot.webp';
---

<section
	id='projects'
	class='w-100vw flex flex-col items-center justify-center mt-[60px] md:mt-[120px]'
>
	<h2 class='blue-text sm:text-[45px] text-[36px] font-bold'>Projects</h2>
	<div class='flex gap-2'>
		<ProjectCard
			bgImage={laEconomiaImg}
			altImg='Imagen de app la economia'
			title='Minifruver la economía'
			description='E commerce to buy fruits and vegetables from the store la economia, E commerce to buy fruits and vegetables from the store la economia, '
			technologies={[
				{ icon: 'ReactIcon', text: 'React js' },
				{ icon: 'CssIcon', text: 'Css' },
			]}
		/>
		<ProjectCard
			bgImage={laEconomiaImg}
			altImg='Imagen de app la economia'
			title='Minifruver la economía'
			technologies={[
				{ icon: 'ReactIcon', text: 'React js' },
				{ icon: 'CssIcon', text: 'Css' },
				{ icon: 'HtmlIcon', text: 'HTML' },
			]}
		/>
		<ProjectCard
			bgImage={laEconomiaImg}
			altImg='Imagen de app la economia'
			title='Minifruver la economía'
			technologies={[
				{ icon: 'ReactIcon', text: 'React js' },
				{ icon: 'CssIcon', text: 'Css' },
			]}
		/>
	</div>

	<br />
