---
import { Image } from 'astro:assets';
import aboutMe from '../../assets/img/about-me-illustration.svg';
import AboutMeInfo from '../molecules/About-me-info.astro';
---

<section
	id='about-me'
	class='w-100vw flex flex-col items-center justify-center mt-[38px]'
>
	<h2 class='blue-text sm:text-[45px] text-[36px] font-bold'>About me</h2>
	<div class='flex flex-col-reverse sm:flex-row items-center justify-center gap-[100px]'>
		<Image
			src={aboutMe}
			alt='about me'
			class='w-[300px] h-[300px] mt-[50px]'
			loading='lazy'
			draggable='false'
		/>
		<AboutMeInfo />
	</div>
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
	<br />
</section>
