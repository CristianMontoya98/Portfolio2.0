			iconClass='w-[30px] h-[30px]'
			containerClass='itemLeft item6 gap-3 bg-[#1572B6]/10 border-[#1572B6] shadow-[0px_0px_18px_0px_#1572B6]'
		/>
		<AboutSkillTag
			text='Javascript'
			icon={JsIcon}
			iconClass='w-[30px] h-[30px]'
			containerClass='itemLeft item7 gap-3 bg-[#F0DB4F]/10 border-[#F0DB4F] shadow-[0px_0px_18px_0px_#F0DB4F]'
		/>
