			containerClass='itemRight item1 bg-[#E44F26]/10 border-[#E44F26] shadow-[0px_0px_18px_0px_#E44F26]'
		/>
		<AboutSkillTag
			text='Css'
			icon={CssIcon}
			iconClass='w-[30px] h-[30px]'
			containerClass='itemRight item2 bg-[#1572B6]/10 border-[#1572B6] shadow-[0px_0px_18px_0px_#1572B6]'
