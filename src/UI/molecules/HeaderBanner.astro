---
import LinkedinIcon from '../../assets/icons/LinkedinIcon.astro';
import GithubIcon from '../../assets/icons/GithubIcon.astro';
import GmailIcon from '../../assets/icons/GmailIcon.astro';
import SocialButton from '../atoms/Social-button.astro';
---

<section
	id='home'
	class='bg-cover bg-[url(src/assets/img/headermobile.webp)] sm:bg-[url(src/assets/img/header.webp)] flex flex-col justify-center items-center h-[100dvh] font-bold text-[23px] sm:text-[48px] text-center relative'
>
	<div class='absolute top-0 left-0 w-full h-full flex flex-col items-center justify-center z-10 bg-[rgba(8,9,17,0.85)]'>
		<div class='absolute bottom-0 left-0 w-full h-32 bg-gradient-to-t from-[#121427] to-transparent z-20'></div>
		<h1 class='text-[#DDF4FB]'>Cristian Montoya</h1>
		<h2 class='text-[#DDF4FB] sm:text-[25px] text-[18px]'><span class='blue-text'>Front-end</span> web developer</h2>
		<div class='flex items-center justify-center gap-3'>
			<SocialButton
				text='LinkedIn'
				icon={LinkedinIcon}
			/>
			<SocialButton
				text='Github'
				icon={GithubIcon}
			/>
			<SocialButton
				text='chrimonlo@gmail.com'
				icon={GmailIcon}
			/>
		</div>
	</div>
</section>
