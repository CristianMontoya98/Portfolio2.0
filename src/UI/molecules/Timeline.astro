---
import CalendarIcon from '../../assets/icons/CalendarIcon.astro';
import { useTranslations } from '../../i18n/utils';
import { languageList } from '../../i18n/ui';

const currentLang = Astro.currentLocale || 'es';
const translateLabels = useTranslations(currentLang as keyof typeof languageList);
---

<ol class='relative border-s border-[#87E6FF] ml-3 mt-5 max-w-[850px]'>
	<li class='mb-10 ms-4'>
		<div class='absolute w-3 h-3 bg-[#DDF4FB] rounded-full mt-1.5 -start-1.5 border border-[#43CFF4] shadow-[0px_0px_20px_3px_#43CFF4]'></div>
		<div class='flex items-center gap-2 mb-1'>
			<CalendarIcon class='text-[#3A556E] w-[20px] h-[20px]' />
			<time class='text-sm font-bold leading-none text-[#3A556E]'
				>{translateLabels('experience.january')} - {translateLabels('experience.currently')}</time
			>
		</div>
		<h3 class='text-lg font-semibold text-[#DDF4FB]'>
			{translateLabels('experience.softwaredevat')}
			<a
				href='https://www.ias.com.co/'
				target='_blank'
				rel='noreferrer'
				class='blue-text underline cursor-pointer'
				>ias Software</a
			> (Angular).
		</h3>
		<p class='mb-4 text-base font-normal text-[#DDF4FB]/90'>
			{translateLabels('experience.softwaredevat.desc')}
		</p>
	</li>
	<li class='mb-2 ms-4'>
		<div class='absolute w-3 h-3 bg-[#DDF4FB] rounded-full mt-1.5 -start-1.5 border border-[#43CFF4] shadow-[0px_0px_20px_3px_#43CFF4]'></div>
		<div class='flex items-center gap-2 mb-1'>
			<CalendarIcon class='text-[#3A556E] w-[20px] h-[20px]' />
			<time class='text-sm font-bold leading-none text-[#3A556E]'
				>{translateLabels('experience.july')} - {translateLabels('experience.january')}</time
			>
		</div>
		<h3 class='text-lg font-semibold text-[#DDF4FB]'>
			{translateLabels('experience.softwaredevat')}
			<a
				href='https://www.accenture.com'
				target='_blank'
				rel='noreferrer'
				class='blue-text underline cursor-pointer'
				>Accenture</a
			> (Angular).
		</h3>
		<p class='text-base font-normal text-[#DDF4FB]/90'>
			{translateLabels('experience.frontenddevat.desc')}
		</p>
	</li>
</ol>
